@model asp_mvc.Models.Movie


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Add date : @Model.DateAdded</li>
    <li>Released year : @Model.ReleaseDate</li>
    <li>Number in stock : @Model.NumberInStock</li>
    <li>Available : @Model.NumberAvailable</li>
</ul>