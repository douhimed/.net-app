@model IList<asp_mvc.Models.Movie>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Genre</th>
        <th>Released year</th>
        <th>Number available</th>
        <th>Details</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.Genre.Name</td>
            <td>@movie.ReleaseDate</td>
            <td>@movie.NumberAvailable</td>
            <td>@Html.ActionLink("Details", "Details", "Movies", new { id = movie.Id }, null)</td>
         </tr> 
    }
</table>
