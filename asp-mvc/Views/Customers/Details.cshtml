@model asp_mvc.Models.Customer


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>


<ul>
    <li>Is subscribed to newsletter : @Model.IsSubscribedToNewsletter</li>
    <li>Membership type : @Model.MembershipType.Name</li>
    <li>membership discount : @Model.MembershipType.DiscountRate</li>
    @if (Model.Birthdate != null)
    {
        <li>Birthday : @Model.Birthdate</li>
    }

</ul>